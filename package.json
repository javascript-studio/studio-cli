{
  "name": "@studio/cli",
  "version": "1.2.0",
  "description": "Scan JavaScript sources for runtime errors",
  "bin": {
    "studio": "bin/cli.js"
  },
  "scripts": {
    "lint": "eslint .",
    "posttest": "npm run lint",
    "test": "mocha",
    "watch": "mocha --watch",
    "preversion": "npm test",
    "version": "changes",
    "postversion": "git push --follow-tags && npm publish"
  },
  "keywords": [
    "analysis",
    "runtime",
    "errors",
    "exceptions",
    "report"
  ],
  "author": "Maximilian Antoni <max@javascript.studio>",
  "homepage": "https://github.com/javascript-studio/studio-cli",
  "eslintConfig": {
    "extends": "@studio"
  },
  "dependencies": {
    "@studio/json-request": "^2.1.1",
    "@studio/log": "^1.5.0",
    "chalk": "^1.1.3",
    "convert-source-map": "^1.3.0",
    "minimist": "^1.2.0",
    "ora": "^1.3.0",
    "source-map": "^0.5.7",
    "xtend": "^4.0.1"
  },
  "devDependencies": {
    "@studio/changes": "^1.3.0",
    "@studio/eslint-config": "^1.0.0",
    "eslint": "^3.12.2",
    "mocha": "^3.5.0",
    "proxyquire": "^1.8.0",
    "sinon": "^2.4.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/javascript-studio/studio-cli.git"
  },
  "files": [
    "bin",
    "lib",
    "README.md"
  ],
  "license": "MIT"
}
